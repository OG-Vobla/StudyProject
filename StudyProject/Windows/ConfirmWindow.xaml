<Window x:Class="StudyProject.Windows.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyProject.Windows"
        mc:Ignorable="d"
        Title="ConfirmWindow"  Height="170" Width="355">
    <Grid  Background="#141412">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  TextWrapping="Wrap"   x:Name="TextCon" HorizontalAlignment="Center"  Text="в" Foreground="White" FontSize="16" Width="248" Height="75"/>
            <StackPanel Orientation="Horizontal" Margin="10 20 10 0" Width="139">
                <Button Click="YesButton_Click" Content="Да" Margin="10" Width="50" FontSize="15" Background="#007ACC" Foreground="White" Height="30" />
                <Button Click="NoButton_Click" Content="Нет" Margin="10" Width="50" FontSize="15" Background="#007ACC" Foreground="White" Height="30" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
